	<category name="weddings" cover="portfolio/weddings/thumbs/1.jpg" source="portfolio/weddings.xml"></category>
	<category name="portraits" cover="portfolio/portraits/thumbs/1.jpg" source="portfolio/portraits.xml"></category>
